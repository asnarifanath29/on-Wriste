<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
 
const logoutButton = document.getElementById('logout-btn');
logoutButton.addEventListener('click', () => {
    Swal.fire({
        title: 'Are you sure?',
        text: 'You will be logged out!',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, logout!'
    }).then((result) => {
        if (result.isConfirmed) {
            console.log('User confirmed logout');
            fetch('/admin/logout', {
                method: 'POST',
            }).then(response => {
                if (response.ok) {
                    window.location.href = '/admin/login'; 
                } else {
                    console.error('Logout failed');
                }
            });
        }
    });
});

</script>
<script>
    let salesChart;
    async function fetchSalesData() {
    const range = document.getElementById('rangeSelect').value;
    let url = `/admin/sales-data?range=${range}`;

    if (range === 'custom') {
        const startDate = document.getElementById('startDate').value;
        const endDate = document.getElementById('endDate').value;
        // Validate custom range
        if (!startDate || !endDate) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Please select both start and end dates for the custom range.',
            });
            return; // Stop further execution
        }

        if (new Date(startDate) >= new Date(endDate)) {
            Swal.fire({
                icon: 'error',
                title: 'Invalid Date Range',
                text: 'Start date cannot be greater than or equal to end date.',
            });
            return; // Stop further execution
        }
        url += `&startDate=${startDate}&endDate=${endDate}`;
    }

    try {
        const response = await fetch(url);
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        const data = await response.json();
        updateChart(data); // Update the chart with the fetched data
    } catch (error) {
        console.error('Error fetching sales data:', error);
    }
}

// Function to update the chart
function updateChart(data) {
    const labels = data.map(item => item._id);
    const sales = data.map(item => item.totalSales);

    const ctx = document.getElementById('salesChart').getContext('2d');

    if (salesChart) {
        salesChart.destroy(); // Destroy existing chart
    }

    salesChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: 'Total Sales',
                data: sales,
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 2,
                fill: false
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                x: {
                    title: {
                        display: true,
                        text: 'Date'
                    }
                },
                y: {
                    title: {
                        display: true,
                        text: 'Total Sales'
                    }
                }
            }
        }
    });
}
document.getElementById('rangeSelect').addEventListener('change', function () {
            const customRangeDiv = document.getElementById('customRange');
            if (this.value === 'custom') {
                customRangeDiv.style.display = 'block';
            } else {
                customRangeDiv.style.display = 'none';
            }
        });

        // Fetch initial data on page load
        document.addEventListener('DOMContentLoaded', fetchSalesData);
</script>
