        </li>
        <li class="nav-item">
            <a class="nav-link" href="/admin/categories">
                <i class="bi bi-grid"></i>
                Categories
            </a>
        </li>
    </ul>
</div>

<!-- Main Content -->
<div class="main-content">
    <h2>Dashboard</h2>
    <!-- Add your dashboard content here -->
</div>

