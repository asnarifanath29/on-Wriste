    <!-- Main Content -->
    <div class="main-content">
        <h2>Add Category</h2>
        <div class="container mt-4">
            <form id="add-category-form">
                <!-- Category Name -->
                <div class="mb-3">
                    <label for="categoryName" class="form-label">Category Name</label>
                    <input type="text" id="categoryName" name="categoryName" class="form-control"
                        placeholder="Enter category name">
                    <div class="invalid-feedback">Please provide a category name.</div>
                </div>

                <!-- Description -->
                <div class="mb-3">
                    <label for="categoryDescription" class="form-label">Description</label>
                    <textarea id="categoryDescription" name="categoryDescription" class="form-control" rows="3"
                        placeholder="Enter category description"></textarea>
                    <div class="invalid-feedback">Please provide a description.</div>
                </div>


                <!-- Buttons -->
                <button type="submit" class="btn btn-primary">Add Category</button>
                <a href="/admin/categories" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>




    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.5.11/dist/sweetalert2.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Sidebar Toggle
        document.getElementById('sidebarToggle').addEventListener('click', function () {
            document.getElementById('sidebar').classList.toggle('show');
        });

        // Form Validation
        document.getElementById('add-category-form').addEventListener('submit', async function (event) {
            event.preventDefault();

            let form = event.target;
            let isValid = true;

            // Category Name Validation
            const categoryName = document.getElementById('categoryName');
            if (!categoryName.value.trim()) {
                categoryName.classList.add('is-invalid');
                isValid = false;
            } else {
                categoryName.classList.remove('is-invalid');
            }

            // Category Description Validation
            const categoryDescription = document.getElementById('categoryDescription');
            if (!categoryDescription.value.trim()) {
                categoryDescription.classList.add('is-invalid');
                isValid = false;
            } else {
                categoryDescription.classList.remove('is-invalid');
            }



            // If form is valid, proceed (e.g., submit the form or send data to server)
            if (isValid) {
                
                const formData = {
                    categoryName: categoryName.value,
                    categoryDescription: categoryDescription.value
                };

                try {
                    const response = await fetch('/admin/categories', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(formData)
                    });

                    const data = await response.json();

                    if (response.ok) {
                        console.log('Category added successfully', data);
                        Swal.fire({
                            icon: 'success',
                            title: 'Category Added Successfully',
                            confirmButtonText: 'OK'
                        }).then(()=>{
                            window.location.href = '/admin/categories'; // Redirect to categories page after success
                        })
                    } else if (response.status === 409) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Category Already Exists',
                            text: 'The category you are trying to add already exists.',
                            confirmButtonText: 'OK'
                        });
                    } else if (response.status === 400) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: 'Failed to add the category. Please try again.',
                            confirmButtonText: 'OK'
                        });
                    }
                } catch (error) {
                    // Network error handling
                    Swal.fire({
                        icon: 'error',
                        title: 'Network Error!',
                        text: 'There was a problem with the network. Please try again later.',
                        confirmButtonText: 'OK'
                    });
                }
            }
        });

    </script>

</body>

