<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/assets/css/flaticon.css">
    <link rel="stylesheet" href="/assets/css/slicknav.css">
    <link rel="stylesheet" href="/assets/css/animate.min.css">
    <link rel="stylesheet" href="/assets/css/magnific-popup.css">
    <link rel="stylesheet" href="/assets/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="/assets/css/themify-icons.css">
    <link rel="stylesheet" href="/assets/css/slick.css">
    <link rel="stylesheet" href="/assets/css/nice-select.css">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        .modal-backdrop {
            z-index: 1040;
        }

        .modal {
            z-index: 1050;
        }

        .reason-textarea {
            resize: none;
        }

        .error-feedback {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 0.25rem;
            display: none;
        }

        .sidebar {
            background: #f8f9fa;
            min-height: calc(100vh - 100px);
            border-right: 1px solid #dee2e6;
        }

        .sidebar .nav-link {
            color: #333;
            padding: 0.8rem 1rem;
            border-radius: 0.25rem;
            margin: 0.2rem 0;
            cursor: pointer;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background: #e9ecef;
            color: #ff2020;
        }

        .profile-section {
            padding: 2rem;
        }

        .section {
            display: none;
        }

        .section.active {
            display: block;
        }

        .address-card {
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .order-card {
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            margin-bottom: 1rem;
        }

        .text-danger {
            color: #e74c3c;
            font-size: 0.875rem;
        }
    </style>
</head>

<body>
    <%- include('../partials/user/header') %>

        <section class="profile-container py-5">
            <div class="container-fluid">
                <div class="row">
                    <!-- Sidebar -->
                    <div class="col-lg-3 col-md-4 sidebar py-4">
                        <div class="text-center mb-4">
                            <i class="fa-regular fa-user"></i>

                            <h5>
                                <%= userData.name %>
                            </h5>
                            <p class="text-muted">
                                <%= userData.email %>
                            </p>
                        </div>
                        <nav class="nav flex-column">
                            <a class="nav-link active" data-section="profile">
                                <i class="fas fa-user"></i> My Profile
                            </a>
                            <a class="nav-link" data-section="orders">
                                <i class="fas fa-shopping-bag"></i> My Orders
                            </a>
                            <a class="nav-link" data-section="addresses">
                                <i class="fas fa-map-marker-alt"></i> My Addresses
                            </a>
                            <a class="nav-link" data-section="password">
                                <i class="fas fa-lock"></i> Change Password
                            </a>
                        </nav>
                    </div>

                    <!-- Main Content -->
                    <div class="col-lg-9 col-md-8 profile-section">
                        <!-- Profile Section -->
                        <div id="profile" class="section active">
                            <h3>My Profile</h3>
                            <div class="card">
                                <div class="card-body">
                                    <form id="profileForm">
                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <label class="form-label">First Name</label>
                                                <input type="text" id="firstName" class="form-control"
                                                    value="<%= userData.name %>">
                                                <span id="firstNameError" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Email</label>
                                                <input type="email" id="email" class="form-control"
                                                    value="<%= userData.email %>" disabled>
                                                <span id="emailError" class="text-danger small"></span>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Phone</label>
                                                <input type="tel" id="phone" class="form-control"
                                                    value="<%= userData.phone %>">
                                                <span id="phoneError" class="text-danger small"></span>
                                            </div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Update Profile</button>
                                    </form>
                                </div>
                            </div>
                        </div>


                        <!-- Order Summary Card -->
                        <div id="orders" class="section">
                            <h3>My Orders</h3>
                            <% if (order && order.length> 0) { %>
                                <% order.forEach(function(orderItem) { %>
                                    <div class="card mb-3">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="mb-1">Order ID: <%= orderItem.orderedId %>
                                                    </h6>
                                                    <p class="text-muted mb-0 small">
                                                        <%= new Date(orderItem.createdAt).toLocaleDateString() %>
                                                    </p>
                                                    <span class="badge bg-primary">
                                                        <%= orderItem.orderStatus %>
                                                    </span>
                                                </div>
                                                <button class="btn btn-primary btn-sm" data-bs-toggle="modal"
                                                    data-bs-target="#orderModal<%= orderItem.orderedId %>">
                                                    View Order
                                                </button>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Order Details Modal -->
                                    <div class="modal fade" id="orderModal<%= orderItem.orderedId %>" tabindex="-1"
                                        aria-hidden="true">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Order Details ID: <%= orderItem.orderedId %>
                                                    </h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                        aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <!-- Order Items -->
                                                    <% orderItem.items.forEach(function(item) { %>
                                                        <div class="row mb-3 align-items-center">
                                                            <div class="col-md-2">
                                                                <img src="<%= item.image %>" alt="Product Image"
                                                                    class="img-fluid rounded">
                                                            </div>
                                                            <div class="col-md-6">
                                                                <h6 class="mb-1">
                                                                    <%= item.productId.name %>
                                                                </h6>
                                                                <p class="text-muted mb-1">Quantity: <%= item.quantity
                                                                        %>
                                                                </p>
                                                                <% if (item.isCanceled) { %>
                                                                    <span class="badge bg-danger">Cancelled</span>
                                                                    <% if (item.canceledItems) { %>
                                                                        <span class="text-muted">(<%= item.canceledItems
                                                                                %> items)</span>
                                                                        <% } %>
                                                                            <% } %>
                                                            </div>
                                                            <div class="col-md-4 text-end">
                                                                <h6 class="mb-1">₹<%= item.price.toFixed(2) %>
                                                                </h6>
                                                                <small class="text-muted">
                                                                    <%= orderItem.paymentMethod.toUpperCase() %>
                                                                </small>
                                                            </div>
                                                        </div>
                                                        <% }); %>

                                                            <!-- Delivery Address -->
                                                            <div class="border-top pt-3 mt-3">
                                                                <div class="row">
                                                                    <div class="col-md-6">
                                                                        <h6>Delivery Address:</h6>
                                                                        <p class="mb-1">
                                                                            <%= orderItem.address.name %>
                                                                        </p>
                                                                        <p class="mb-1">
                                                                            <%= orderItem.address.address %>
                                                                        </p>
                                                                        <p class="mb-1">
                                                                            <%= orderItem.address.locality %>,
                                                                                <%= orderItem.address.place %>,
                                                                                    <%= orderItem.address.state %> -
                                                                                        <%= orderItem.address.pincode %>
                                                                        </p>
                                                                        <p class="mb-1">Phone: <%=
                                                                                orderItem.address.phone %>
                                                                        </p>
                                                                    </div>
                                                                    <div class="col-md-6 text-end">
                                                                        <div class="mb-2">
                                                                            <span class="text-muted">Items Total:</span>
                                                                            <span class="ms-2">₹<%=
                                                                                    orderItem.totalAmount.toFixed(2) %>
                                                                            </span>
                                                                        </div>
                                                                        <div class="fw-bold">
                                                                            <span>Total Payable:</span>
                                                                            <span class="ms-2">₹<%=
                                                                                    orderItem.payableAmount.toFixed(2)
                                                                                    %></span>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <% if (!['Delivered', 'Canceled' , 'Returned'
                                                        ].includes(orderItem.orderStatus)) { %>
                                                        <button class="btn btn-outline-danger"
                                                            onclick="cancelOrder('<%= orderItem._id %>')">
                                                            Cancel Order
                                                        </button>
                                                        <% } %>
                                                            <button class="btn btn-primary"
                                                                onclick="trackOrder('<%= orderItem._id %>')">
                                                                Track Order
                                                            </button>
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <div class="empty-orders text-center py-5">
                                                <i class="fas fa-shopping-bag mb-3"
                                                    style="font-size: 3rem; color: #ccc;"></i>
                                                <h5>No Orders Yet</h5>
                                                <p class="text-muted">Start shopping to see your orders here!</p>
                                                <a href="/shop" class="btn btn-primary mt-3">Start Shopping</a>
                                            </div>
                                            <% } %>
                        </div>



                        <!-- Addresses Section -->
                        <div id="addresses" class="section">
                            <h3>My Addresses</h3>
                            <a href="/add-address" class="btn btn-primary mb-3">
                                <i class="fas fa-plus"></i> Add New Address
                            </a>
                            <div class="tab-content" id="nav-tabContent">
                                <div class="tab-pane fade show active" id="nav-home" role="tabpanel"
                                    aria-labelledby="nav-home-tab">
                                    <div class="row">
                                        <% if (addresses.length===0) { %>
                                            <div class="col-12 text-center">
                                                <p>No addresses available at the moment.</p>
                                            </div>
                                            <% } else { %>
                                                <% addresses.forEach(address=> { %>
                                                    <div class="col-md-6">
                                                        <div class="address-card">
                                                            <div class="d-flex justify-content-between mb-2">
                                                                <h6>
                                                                    <%= address.addressType %>
                                                                </h6>
                                                                <div>
                                                                    <a href="/edit-address/<%= address._id %>"
                                                                        class="text-primary me-2"><i
                                                                            class="fas fa-edit"></i></a>
                                                                    <a href="#" class="text-danger delete-btn"
                                                                        data-id="<%= address._id %>">
                                                                        <i class="fas fa-trash"></i>
                                                                    </a>
                                                                </div>
                                                            </div>
                                                            <p class="mb-1">
                                                                <%= address.name %>
                                                            </p>
                                                            <p class="mb-1">
                                                                <%= address.locality %>
                                                            </p>
                                                            <p class="mb-1">
                                                                <%= address.address %>
                                                            </p>
                                                            <p class="mb-1">
                                                                <%= address.place %>, <%= address.state %>
                                                                        <%= address.pincode %>
                                                            </p>
                                                            <p class="mb-1">Phone: <%= address.phone %>
                                                            </p>
                                                            <% if (address.alternatePhone) { %>
                                                                <p class="mb-1">Alternate Phone: <%=
                                                                        address.alternatePhone %>
                                                                </p>
                                                                <% } %>
                                                                    <% if (address.landmark) { %>
                                                                        <p class="mb-1">Landmark: <%= address.landmark
                                                                                %>
                                                                        </p>
                                                                        <% } %>
                                                        </div>
                                                    </div>
                                                    <% }) %>
                                                        <% } %>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <!-- Change Password Section -->
                        <div id="password" class="section">
                            <h3>Change Password</h3>
                            <div class="card">
                                <div class="card-body">
                                    <form id="passwordForm">
                                        <div class="mb-3">
                                            <label for="currentPassword" class="form-label">Current Password</label>
                                            <input type="password" id="currentPassword" class="form-control">
                                            <div id="currentPasswordError" class="text-danger"></div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="newPassword" class="form-label">New Password</label>
                                            <input type="password" id="newPassword" class="form-control">
                                            <div id="newPasswordError" class="text-danger"></div>
                                        </div>
                                        <div class="mb-3">
                                            <label for="confirmNewPassword" class="form-label">Confirm New
                                                Password</label>
                                            <input type="password" id="confirmNewPassword" class="form-control">
                                            <div id="confirmNewPasswordError" class="text-danger"></div>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Update Password</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <div class="modal fade" id="cancelOrderModal" tabindex="-1" aria-labelledby="cancelOrderModalLabel"
            aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="cancelOrderModalLabel">Cancel Order</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form id="cancelOrderForm">
                            <input type="hidden" id="orderIdToCancel">
                            <div class="mb-3">
                                <label for="cancelReason" class="form-label">Please provide a reason for
                                    cancellation</label>
                                <textarea class="form-control reason-textarea" id="cancelReason" rows="4" required
                                    minlength="10" maxlength="200"
                                    placeholder="Enter your reason for cancellation (minimum 10 characters)"></textarea>
                                <div class="error-feedback" id="reasonError">
                                    Please provide a detailed reason (minimum 10 characters)
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-danger" id="confirmCancelBtn">Cancel Order</button>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../partials/user/footer') %>

