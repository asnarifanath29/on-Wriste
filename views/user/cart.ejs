    <script>
        document.addEventListener('DOMContentLoaded', function () {

            const quantityControls = document.querySelectorAll('.quantity-selector');

            quantityControls.forEach(control => {
                const minusBtn = control.querySelector('.minus');
                const plusBtn = control.querySelector('.plus');
                const quantityDisplay = control.querySelector('.quantity-display');
                const productId = minusBtn.dataset.product;
                const stock = parseInt(minusBtn.dataset.stock);

                let quantity = parseInt(quantityDisplay.textContent);

                function updateQuantity() {
                    quantityDisplay.textContent = quantity;

                    const row = control.closest('tr');
                    const price = parseFloat(row.dataset.price);
                    const totalElement = document.getElementById(`total-${productId}`);
                    totalElement.textContent = `₹${(price * quantity).toFixed(2)}`;


                    const stockMsg = document.getElementById(`stock-msg-${productId}`);
                    if (stock <= 5) {
                        stockMsg.textContent = `Only ${stock - quantity} items remaining`;
                    }

                    minusBtn.disabled = quantity <= 1;
                    plusBtn.disabled = quantity >= Math.min(stock, 10);

                    updateCartInBackend(productId, quantity);

                    updateSubtotal();
                }

                minusBtn.addEventListener('click', () => {
                    if (quantity > 1) {
                        quantity--;
                        updateQuantity();
                    }
                });

                plusBtn.addEventListener('click', () => {
                    if (quantity < Math.min(stock, 10)) {
                        quantity++;
                        updateQuantity();
                    }
                });


                updateQuantity();
            });

            function updateSubtotal() {
                const totals = Array.from(document.querySelectorAll('[id^="total-"]'))
                    .map(el => parseFloat(el.textContent.replace('₹', '')));

                const subtotal = totals.reduce((sum, price) => sum + price, 0);
                const subtotalElement = document.querySelector('.subtotal-amount');
                if (subtotalElement) {
                    subtotalElement.textContent = `₹${subtotal.toFixed(2)}`;
                }
            }

            async function updateCartInBackend(productId, quantity) {
                try {
                    const response = await fetch('/cart-update', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            productId,
                            quantity
                        })
                    });

                    if (!response.ok) {
                        throw new Error('Failed to update cart');
                    }

                } catch (error) {
                    console.error('Error updating cart:', error);
                }
            }
        });




        async function goToCheckout() {
            const button = document.getElementById('checkoutButton');
            if (!button) return;

            try {
                button.disabled = true;
                button.textContent = 'Processing...';
                // Fetch the cart data from the server
        const cartResponse = await fetch('/cart-check');
        const cartData = await cartResponse.json();

        // Check if the cart is empty
        if (!cartData || !cartData.items || cartData.items.length === 0) {
            Swal.fire({
                icon: 'warning',
                title: 'Your cart is empty',
                text: 'Please add some items to your cart before proceeding to checkout.',
                confirmButtonText: 'Go to Shop'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/shop';
                }
            });
            return;
        }

                const totals = Array.from(document.querySelectorAll('[id^="total-"]'))
                    .map(el => parseFloat(el.textContent.replace('₹', '')));

                const subtotal = totals.reduce((sum, price) => sum + price, 0);

                if (isNaN(subtotal)) {
                    throw new Error('Invalid subtotal calculation');
                }

                const response = await fetch('/checkout', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ subtotal }),
                });

                if (response.ok) {
                    window.location.href = '/checkout';
                } else {
                    throw new Error('Failed to process checkout');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred. Please try again.');
            } finally {
                button.disabled = false;
                button.textContent = 'Proceed to checkout';
            }
        }

        document.addEventListener('DOMContentLoaded', function () {

            updateSubtotal();

            const checkoutButton = document.getElementById('checkoutButton');
            if (checkoutButton) {
                checkoutButton.addEventListener('click', goToCheckout);
            }
        });


    </script>
